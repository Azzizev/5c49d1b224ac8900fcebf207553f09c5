<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start">

        <TextView
            android:id="@+id/details_ingredients_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ingredient"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/details_ingredients_amount"
            android:layout_toEndOf="@+id/details_ingredients_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:hint="0"
            android:background="@null"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:inputType="text"
            android:gravity="right"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/details_ingredients_measure_unity"
            android:layout_toEndOf="@+id/details_ingredients_amount"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:hint="ml"
            android:background="@null"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:inputType="text"
            android:gravity="right"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_below="@+id/details_ingredients_name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="7dp"
            android:background="@color/colorHint" />
    </RelativeLayout>
</android.support.v7.widget.CardView>