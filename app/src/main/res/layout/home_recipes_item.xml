<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_item_id"
    android:elevation="1dp"
    app:cardCornerRadius="3dp"
    android:clickable="true"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/lasagne"/>

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe"
            android:textColor="#EAFFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textStyle="italic"
            android:textSize="28dp"
            android:elevation="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/recipe_image"
            android:background="#f2f2f2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/recipe_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_favoriterec_grey"
                    android:layout_centerVertical="true"
                    android:text="            "
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/recipe_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32dp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/recipe_btnDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Details"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>